# FL Studio MCP Configuration
# Copy this file to .env and update with your settings

# FL Studio Configuration
# Path to your FL Studio user data directory
FL_STUDIO_USER_DATA_PATH="C:\\Users\\YourName\\Documents\\Image-Line\\FL Studio"

# Flapi MIDI Port Configuration
# Windows: Create these ports in loopMIDI
# macOS: These are created automatically
FLAPI_REQUEST_PORT="Flapi Request"
FLAPI_RESPONSE_PORT="Flapi Response"

# MCP Configuration
# Log level: DEBUG, INFO, WARNING, ERROR
MCP_LOG_LEVEL="INFO"

# Auto-connect on server start
FL_AUTO_CONNECT="false"

# Export Configuration
# Default export path for rendered audio
DEFAULT_EXPORT_PATH="C:\\Users\\YourName\\Music\\FL Studio Exports"

# Default export format: wav, mp3, flac
DEFAULT_EXPORT_FORMAT="wav"

# Default export quality: low, medium, high
DEFAULT_EXPORT_QUALITY="high"
